{
  "compilerOptions": {
    "target": "ES6",           
    "module": "commonjs",       
    "outDir": "public/dist",         
    "rootDir": "./src",         
    "strict": true,             
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],      // Inclui todos os arquivos TypeScript na pasta src.
  "exclude": ["node_modules"]   // Exclui a pasta node_modules.
}
